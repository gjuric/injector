{
    "name": "zalas/injector",
    "description": "Injects services from a PSR-11 service container into objects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ],
    "require": {
        "psr/container": "^1.0"
    },
    "require-dev": {
        "php": "^7.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "Zalas\\Injector\\": "src/"
    },
    "autoload-dev": {
        "Zalas\\Injector\\Tests\\": "tests/"
    },
    "scripts": {
        "install-and-update-scripts": [
            "[ -f vendor/bin/infection ] || curl -Ls https://github.com/infection/infection/releases/download/0.8.0/infection.phar > vendor/bin/infection && chmod +x vendor/bin/infection",
            "[ -f vendor/bin/infection.pubkey ] || curl -Ls https://github.com/infection/infection/releases/download/0.8.0/infection.phar.pubkey > vendor/bin/infection.pubkey && chmod +x vendor/bin/infection.pubkey"
        ],
        "post-install-cmd": [
            "@install-and-update-scripts"
        ],
        "post-update-cmd": [
            "@install-and-update-scripts"
        ]
    }
}
